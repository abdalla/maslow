{
    "roots": [
      "."
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/helpers/"
    ],
    "testRegex": [
      "(/tests/.*|(\\.|/)spec)\\.[jt]sx?$"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 99,
        "branches": 99,
        "functions": 99,
        "lines": 99
      }
    }
}